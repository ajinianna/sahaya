<div class="justify-content-center">
    <h1 class="h3 mb-3 font-weight-normal" style="margin-top:50px;">
        <strong>
            <center>SIGN UP</center>
        </strong>
    </h1>
    <form class="form-login" style="margin-left:500px" action="/users/signup" method="POST">
        <br><br><br>
        <div class="form-group row">
            <label for="inputemailid" class="col-sm-2 col-form-label">Email id:</label>
            <div class="col-sm-6">
                <input name="email" type="email" class="form-control" id="inputemailid" placeholder="Email" />
            </div>
        </div>
        <div class="form-group row">
            <label for="inputphonenumber" class="col-sm-2 col-form-label">Phone Number:</label>
            <div class="col-sm-6">
                <input name="phoneNumber" type="tel" class="form-control" id="inputphonenumber"
                    placeholder="PhoneNumber" />
            </div>
        </div>
        <div class="form-group row">
            <label for="inputaadharno" class="col-sm-2 col-form-label">Aadhar Number:</label>
            <div class="col-sm-6">
                <input name="aadharNumber" type="text" class="form-control" id="inputaadharno"
                    placeholder="Aadhar Number" />
            </div>
        </div>
        <div class="form-group row">
            <div class="custom-control custom-radio custom-control-inline col-sm-4">
                <input type="radio" id="customRadio1" name="userType" class="custom-control-input" checked value="portal_user">
                <label class="custom-control-label" for="customRadio1">PORTAL USER</label>
            </div>
            <div class="custom-control custom-radio custom-control-inline">
                <input type="radio" id="customRadio2" name="userType" class="custom-control-input" value="offficial_user">
                <label class="custom-control-label" for="customRadio2">OFFICIAL</label>
            </div>
        </div>
        <div class="form-group row">
            <label for="inputpassword" class="col-sm-2 col-form-label">Password :</label>
            <div class="col-sm-6">
                <input name="password" type="password" class="form-control" id="inputpassword" placeholder="Password" />
            </div>
        </div>
        <div class="container">
            <input type="submit" class="btn btn-success" />
            <a class="btn btn-secondary" href="/">Back</a>
        </div>
    </form>
</div>